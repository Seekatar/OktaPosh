{
    "$schema": "../../../schemas/configuration-schema.json",
    "variables": {
        "accessTokenScope": "access:token",
        "getItemScope": "get:item",
        "saveItemScope": "save:item",
        "removeItemScope": "remove:item",
        "getProviderScope": "get:provider",
        "mainApp": "test-main",
        "interfaceApp": "test-Interface",
        "3rdPartyApp": "test-ThirdParty",
        "analyticsApp": "test-Analytics"
    },
    "authorizationServer": {
        "name": "Okta-Posh-Test-AS",
        "audience": "https://mydomain/my-ui",
        "scopes": [
            {
                "name": "access:token",
                "description": "Added by OktaPosh",
                "metadataPublish": false
            },
            {
                "name": "get:item",
                "description": "Added by OktaPosh",
                "metadataPublish": false
            },
            {
                "name": "save:item",
                "description": "Added by OktaPosh",
                "metadataPublish": false
            },
            {
                "name": "remove:item",
                "description": "Added by OktaPosh",
                "metadataPublish": false
            },
            {
                "name": "get:provider",
                "description": "Added by OktaPosh",
                "metadataPublish": false
            }
        ],
        "claims": [
            {
                "name": "appName",
                "valueType": "EXPRESSION",
                "claimType": "RESOURCE",
                "value": "app.profile.appName",
                "scopes": [
                    "access:token"
                ]
            }
        ]
    },
    "serverApplications": [
        {
            "name": "test-main",
            "properties": {
                "appName": "test-main"
            },
            "policyName": "test-main-Policy",
            "scopes": [
                "access:token",
                "get:item",
                "save:item",
                "get:provider"
            ]
        },
        {
            "name": "test-Interface",
            "policyName": "test-Interface-Policy",
            "scopes": [
                "access:token",
                "get:item",
                "save:item",
                "get:provider"
            ]
        },
        {
            "name": "test-ThirdParty",
            "policyName": "test-ThirdParty-Policy",
            "scopes": [
                "access:token",
                "get:item",
                "get:provider"
            ]
        },
        {
            "name": "test-ThirdPartyAdmin",
            "policyName": "test-ThirdPartyAdmin-Policy",
            "scopes": [
                "access:token",
                "get:item",
                "save:item",
                "get:provider"
            ]
        },
        {
            "name": "test-Analytics",
            "policyName": "test-Analytics-Policy",
            "scopes": [
                "access:token",
                "get:item",
                "get:provider"
            ]
        }
    ]
}