{
    "$schema": "../../../schemas/configuration-schema.json",
    "variables": [
        {
            "name": "accessTokenScope",
            "value": "access:token"
        },
        {
            "name": "getItemScope",
            "value": "get:item"
        },
        {
            "name": "saveItemScope",
            "value": "save:item"
        },
        {
            "name": "removeItemScope",
            "value": "remove:item"
        },
        {
            "name": "getProviderScope",
            "value": "get:provider"
        },
        {
            "name": "interfaceApp",
            "value": "CCC-CASReliance-Interface"
        },
        {
            "name": "3rdPartyApp",
            "value": "CCC-CASReliance-ThirdParty"
        },
        {
            "name": "analyticsApp",
            "value": "CCC-CASReliance-Analytics"
        }
    ],
    "authorizationServer": {
        "name": "Casualty-Reliance-AS",
        "audience": "api://cccis/reliance/api",
        "scopes": [
            {
                "name": "{{ accessTokenScope }}",
                "description": "Added by OktaPosh",
                "metadataPublish": false
            },
            {
                "name": "{{ getItemScope }}",
                "description": "Added by OktaPosh",
                "metadataPublish": false
            },
            {
                "name": "{{ saveItemScope }}",
                "description": "Added by OktaPosh",
                "metadataPublish": false
            },
            {
                "name": "{{ removeItemScope }}",
                "description": "Added by OktaPosh",
                "metadataPublish": false
            },
            {
                "name": "{{ getProviderScope }}",
                "description": "Added by OktaPosh",
                "metadataPublish": false
            }
        ],
        "claims": [
            {
                "name": "appName",
                "valueType": "EXPRESSION",
                "claimType": "RESOURCE",
                "value": "app.profile.appName",
                "scopes": [
                    "{{ accessTokenScope }}"
                ]
            }
        ]
    },
    "groups": [
        {
            "name": "Group1",
            "createScope": false
        }
    ],
    "serverApplications": [
        {
            "name": "CCC-CASReliance-DRE",
            "properties": {
                "appName": "CCC-CASReliance-DRE"
            },
            "policyName": "CCC-CASReliance-DRE-Policy",
            "scopes": [
                "{{ accessTokenScope }}",
                "{{ getItemScope }}",
                "{{ saveItemScope }}",
                "{{ getProviderScope }}"
            ]
        },
        {
            "name": "{{ interfaceApp }}",
            "policyName": "{{ interfaceApp }}-Policy",
            "scopes": [
                "{{ accessTokenScope }}",
                "{{ getItemScope }}",
                "{{ saveItemScope }}",
                "{{ getProviderScope }}"
            ]
        },
        {
            "name": "{{ 3rdPartyApp }}",
            "policyName": "{{ 3rdPartyApp }}-Policy",
            "scopes": [
                "{{ accessTokenScope }}",
                "{{ getItemScope }}",
                "{{ getProviderScope }}"
            ]
        },
        {
            "name": "{{ 3rdPartyApp }}Admin",
            "policyName": "{{ 3rdPartyApp }}Admin-Policy",
            "scopes": [
                "{{ accessTokenScope }}",
                "{{ getItemScope }}",
                "{{ saveItemScope }}",
                "{{ getProviderScope }}"
            ]
        },
        {
            "name": "{{ analyticsApp }}",
            "policyName": "{{ analyticsApp }}-Policy",
            "scopes": [
                "{{ accessTokenScope }}",
                "{{ getItemScope }}",
                "{{ getProviderScope }}"
            ]
        }
