{
    "$schema": "../../../schemas/configuration-schema.json",
    "variables": [
        {
            "name": "ui-path",
            "value": "dc-ui"
        },
        {
            "name": "additionalRedirect",
            "value": ""
        },
        {
            "name": "additionalLogout",
            "value": ""
        },
        {
            "name": "additionalOrigins",
            "value": ""
        }
    ],
    "authorizationServer": {
        "name": "Casualty-DataCapture-AS",
        "description": "DataCapture UI for casualty",
        "audience": "https://reliance/{{ ui-path }}",
        "scopes": [],
        "claims": [
            {
                "name": "email",
                "valueType": "EXPRESSION",
                "claimType": "ACCESS_TOKEN",
                "value": "user.email"
            },
            {
                "name": "friendlyName",
                "valueType": "EXPRESSION",
                "value": "String.len(user.displayName) > 0 ? user.displayName : user.firstName+ \" \" + user.lastName",
                "claimType": "ACCESS_TOKEN"
            },
            {
                "name": "friendlyName",
                "valueType": "EXPRESSION",
                "value": "String.len(user.displayName) > 0 ? user.displayName : user.firstName+ \" \" + user.lastName",
                "claimType": "ID_TOKEN"
            },
            {
                "name": "login",
                "valueType": "EXPRESSION",
                "value": "user.email",
                "claimType": "ACCESS_TOKEN"
            }
        ]
    },
    "groups": [
        {
            "name": "CCC-DataCapture-Client-den1-Group",
            "scope": "casualty.datacapture.client.den1"
        },
        {
            "name": "CCC-DataCapture-Client-nw-Group",
            "scope": "casualty.datacapture.client.nw"
        },
        {
            "name": "CCC-DataCapture-Client-safeco-Group",
            "scope": "casualty.datacapture.client.safeco"
        },
        {
            "name": "CCC-DataCapture-Client-geico-Group",
            "scope": "casualty.DataCapture.client.geico"
        },
        {
            "name": "CCC-DataCapture-Client-usaa-Group",
            "scope": "casualty.datacapture.client.usaa"
        }
    ],
    "spaApplications": [
        {
            "name": "CCC-CASDataCapture-SPA",
            "policyName": "CCC-CASDataCapture-SPA-Policy",
            "loginUri": "https://rbr{{ domainSuffix }}.{{ cluster }}.aws.casualty.cccis.com/{{ ui-path }}",
            "redirectUris": [
                "https://rbr{{ domainSuffix }}.casualty.mycccportal.com/{{ ui-path }}/implicit/callback",
                "https://rbr{{ domainSuffix }}.{{ cluster }}.aws.casualty.cccis.com/{{ ui-path }}/implicit/callback"
                ,"{{ additionalRedirect }}"
            ],
            "postLogoutUris": [
                "https://rbr{{ domainSuffix }}.casualty.mycccportal.com/{{ ui-path }}",
                "https://rbr{{ domainSuffix }}.{{ cluster }}.aws.casualty.cccis.com/{{ ui-path }}"
                ,"{{ additionalLogout }}"
            ],
            "origins": [
                "https://rbr{{ domainSuffix }}.{{ cluster }}.aws.casualty.cccis.com"
                ,"{{ additionalOrigins }}"
            ],
            "grantTypes": [
                "implicit",
                "authorization_code"
            ],
            "scopes": [
                "*"
            ],
            "groups": [
                "CCC-DataCapture-Client-USAA-Group",
                "CCC-DataCapture-Client-SAFECO-Group",
                "CCC-DataCapture-Client-NW-Group",
                "CCC-DataCapture-Client-geico-Group",
                "CCC-DataCapture-Client-DEN1-Group"
            ]
        }
    ]
}