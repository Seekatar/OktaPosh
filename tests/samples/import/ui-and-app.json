{
    "$schema": "../../../schemas/configuration-schema.json",
    "variables": {
        "accessTokenScope": "access:token",
        "ui-path": "my-ui"
    },
    "authorizationServer": {
        "name": "Okta-Posh-Test-AS",
        "audience": "https://mydomain/{{ ui-path }}",
        "scopes": [
            {
                "name": "{{ accessTokenScope }}",
                "description": "Added by OktaPosh",
                "metadataPublish": false
            }
        ],
        "claims": [
            {
                "name": "appName",
                "valueType": "EXPRESSION",
                "claimType": "RESOURCE",
                "value": "app.profile.appName",
                "scopes": []
            },
            {
                "name": "friendlyName",
                "valueType": "EXPRESSION",
                "value": "String.len(user.displayName) > 0 ? user.displayName : user.firstName+ \" \" + user.lastName",
                "claimType": "ACCESS_TOKEN"
            },
            {
                "name": "friendlyName",
                "valueType": "EXPRESSION",
                "value": "String.len(user.displayName) > 0 ? user.displayName : user.firstName+ \" \" + user.lastName",
                "claimType": "ID_TOKEN"
            },
            {
                "name": "login",
                "valueType": "EXPRESSION",
                "value": "user.email",
                "claimType": "ACCESS_TOKEN"
            }
        ]
    },
    "groups": [
        {
            "name": "user-group",
            "scope": "user.group"
        }
    ],
    "serverApplications": [
        {
            "name": "test-server-app",
            "properties": {
                "appName": "My-Test-App"
            },
            "policyName": "test-server-app-policy",
            "scopes": [
                "{{ accessTokenScope }}"
            ]
        },
        {
            "name": "cicd-app",
            "properties": {
                "appName": "My-CICD-App"
            },
            "policyName": "cicd-app-policy",
            "scopes": [
                "{{ accessTokenScope }}"
            ]
        }
    ],
    "spaApplications": [
        {
            "name": "test-spa-app",
            "policyName": "test-spa-app-policy",
            "loginUri": "https://mydomain{{ domainSuffix }}.{{ cluster }}.aws.com/{{ ui-path }}",
            "redirectUris": [
                "https://mydomain{{ domainSuffix }}.{{ cluster }}.aws..com/{{ ui-path }}/implicit/callback",
                "{{ additionalRedirect }}"
            ],
            "postLogoutUris": [
                "https://flask-web{{ domainSuffix }}.{{ cluster }}.aws.com/authorization-code/callback",
                "https://mydomain{{ domainSuffix }}.{{ cluster }}.aws.com/{{ ui-path }}"
            ],
            "origins": [
                "https://mydomain{{ domainSuffix }}.{{ cluster }}.aws.com"
            ],
            "grantTypes": [
                "implicit",
                "authorization_code"
            ],
            "scopes": [
                "*"
            ],
            "groups": [
                "user-group"
            ]
        }
    ]
}